{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debugging server.js (node)",
      "program": "${workspaceFolder}/server/server.js",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run server.js (nodemon)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/server.js",
      "restart": true,
      "console": "integratedTerminal"
    }
  ]
}